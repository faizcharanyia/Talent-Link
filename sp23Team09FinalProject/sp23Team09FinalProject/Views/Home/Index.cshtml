<h1>Welcome to the Recruiting Home Page!</h1>
<a asp-action="Index" asp-controller="Position" class="btn btn-info">Check Positions</a>

@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("CSO") || User.IsInRole("Recruiter") || User.IsInRole("Student"))
    {
        <a asp-action="Index" asp-controller="Applications" class="btn btn-warning">Check Applications</a>
        <a asp-action="Index" asp-controller="Company" class="btn btn-danger">Check Companies</a>

    }
}
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("CSO") || User.IsInRole("Recruiter"))
    {
        <a asp-action="IndexStudent" asp-controller="AppUser" class="btn btn-info">Check Students</a>
    }
}
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("CSO"))
    {
        <a asp-action="Index" asp-controller="Major" class="btn btn-success">Check Majors</a>
    }
}