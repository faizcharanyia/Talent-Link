@model sp23Team09FinalProject.Models.Application

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (User.IsInRole("CSO") || User.IsInRole("Recruiter"))
                {
                <div class="form-group">
                    <label asp-for="Student" class="control-label"></label>
                    @Html.DropDownList("SelectedStudentID", (SelectList)ViewBag.AllStudents, new { @class = "form-control" })

                </div>
                }

                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    @Html.DropDownList("SelectedPositionID", (SelectList)ViewBag.AllPositions, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

